FROM python:3.11-slim

WORKDIR /app

# Copy requirements first for better caching
COPY requirements.txt .

# Install dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY . .

# Create necessary directories for OpenAPI schema
RUN mkdir -p static/.well-known static

# Generate OpenAPI schema using the clean version
RUN python scripts/generate_openapi_clean.py

# Expose the port the app runs on
EXPOSE 8000

# Command to run the application with the clean version
CMD ["uvicorn", "app.main_clean:app", "--host", "0.0.0.0", "--port", "8000"]